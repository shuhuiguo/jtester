<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="jtester-tutorial">
	<resultMap id="PHONE_GROUP" class="org.jtester.tutorial01.beans.PhoneGroup">
		<result property="id" column="id" />
		<result property="groupName" column="group_name" />
		<result property="description" column="description" />
	</resultMap>

	<update id="insert_phone_group" parameterClass="org.jtester.tutorial01.beans.PhoneGroup">
        <![CDATA[
		insert phone_group(group_name,description) 
		values(#groupName#,#description#)
		]]>
	</update>
	
	<update id="add_phone_item_to_group" parameterClass="java.util.HashMap">
        <![CDATA[
		insert phone_item_group(item_id,group_id) 
		values(#phoneItemId#,#phoneGroupId#)
		]]>
	</update>

	<select id="find_group_id_by_name" resultClass="long"
		parameterClass="string">
        <![CDATA[
		select id from phone_group where group_name=#value#
		]]>
	</select>
</sqlMap>
