<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="jtester-tutorial">
	<resultMap id="PHONE_ITEM" class="org.jtester.tutorial01.beans.PhoneItem">
		<result property="id" column="id" />
		<result property="username" column="username" />
		<result property="mobile" column="mobile" />
		<result property="mobile2" column="mobile2" />
		<result property="familyPhone" column="family_phone" />

		<result property="gender" column="gender" />
		<result property="company" column="company" />
		<result property="title" column="title" />
		<result property="mail" column="mail" />
	</resultMap>

	<update id="insert_phone_item" parameterClass="org.jtester.tutorial01.beans.PhoneItem">
        <![CDATA[
		insert phone_item(username, mobile, mobile2, family_phone, gender, company, title, mail) 
		values(#username#, #mobile#, #mobile2#, #familyPhone#, #gender#, #company#, #title#, #mail#)
		]]>
	</update>

	<select id="find_phone_byname" resultMap="PHONE_ITEM"
		parameterClass="string">
        <![CDATA[
		select * from phone_item where username=#value#
		]]>
	</select>

	<select id="find_phone_item_id_by_name" resultClass="long"
		parameterClass="string">
        <![CDATA[
		select id from phone_item where username=#value#
		]]>
	</select>
	
	<select id="find_phone_items_id_by_group" resultMap="PHONE_ITEM"
		parameterClass="long">
        <![CDATA[
		select * from phone_item as item 
		where exists (select 1 from phone_item_group as ig
		              where item.id = ig.item_id 
		              and ig.group_id=#value#)
		]]>
	</select>
</sqlMap>
